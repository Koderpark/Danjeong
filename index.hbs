{{!< default}}
<div class="flex flex-col">
  {{> "section/hero-index"}}
  
  {{#get "posts" filter="featured:true" limit="4" include="tags,authors"}}
    {{> "section/featured"}}
  {{/get}}

  {{> "section/title" title="최신 글" subtitle="recent article"}}
  {{> "section/article-inf"}}

  <div class="gh-container">
    {{! If JS isn't enabled, fallback to standard pagination }}
    <noscript>
      <div class="gh-pagination">
        {{pagination}}
      </div>
    </noscript>
  </div>
</div>