{{#get "tags" limit="all" include="count.posts" order="count.posts desc"}}
  {{#foreach tags}}
    <div class="overflow-hidden rounded-xl mb-8 tags">
      <a href="{{url}}" class="w-full h-full relative flex tag-elem">
        {{#if feature_image}}
          <img
            src="{{feature_image}}"
            class="u-object-fit z-0"
            {{#if accent_color}}style="--tag-color: {{accent_color}};"{{/if}}
          />
          <div class="is-image flex-1 z-10">
            <div class="mb-2">
              <span class="text-4xl font-bold">{{name}}</span>
              <span class="text-xl">{{count.posts}}개의 글</span>
            </div>
            <p class="text-base">{{description}}</p>
          </div>
        {{else}}
          <div class="no-image flex-1 z-10 p-4">
            <div class="mb-2">
              <span class="text-4xl font-bold">{{name}}</span>
              <span class="text-xl">{{count.posts}}개의 글</span>
            </div>
            <p class="text-base">{{description}}</p>
          </div>
        {{/if}}
      </a>
    </div>

  {{/foreach}}
{{/get}}