{{#get "tags" limit="all" include="count.posts" order="count.posts desc"}}
  {{#foreach tags}}
    <div class="card card-tag featured h-fit {{#if feature_image}}{{else}}no-image{{/if}}">
      <a href="{{url}}" class="relative">
        {{#if feature_image}}
          <img
            src="{{feature_image}}"
            {{#if accent_color}}style="--tag-color: {{accent_color}};"{{/if}}
          />
        {{/if}}
        <div class="card-desc flex-1 z-10">
          <div class="">
            <span class="text-4xl font-bold">{{name}}</span>
            <span class="text-xl">{{count.posts}}개의 글</span>
          </div>
          {{#if description}}
            <p class="text-base mt-2">{{description}}</p>
          {{/if}}
        </div>
      </a>
    </div>
  {{/foreach}}
{{/get}}